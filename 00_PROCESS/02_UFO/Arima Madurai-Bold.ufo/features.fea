# Prefix: Languagesystems
# automatic
languagesystem DFLT dflt;
languagesystem latn dflt;
languagesystem taml dflt;
languagesystem latn ROM;
languagesystem latn MOL;
languagesystem latn CAT;

feature aalt {
# automatic
feature ccmp;
feature subs;
feature sups;
feature frac;
feature akhn;
feature cjct;
feature psts;
feature ss01;
feature ss02;
feature locl;
feature ordn;
} aalt;

feature ccmp {
# automatic
