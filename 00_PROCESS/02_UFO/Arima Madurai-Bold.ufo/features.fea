	script latn;
	lookupflag 0;
	sub G tildecomb by G_tildecomb;
	sub g tildecomb by g_tildecomb;
} ccmp_latn_1;

lookup ccmp_latn_2 {
	script latn;
	lookupflag 0;
	sub G tildecomb by G_tildecomb;
